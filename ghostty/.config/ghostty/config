shell-integration = zsh

# --- Visual Theme ---
# Official Catppuccin Mocha
background = #1e1e2e
foreground = #cdd6f4
selection-background = #353749
selection-foreground = #cdd6f4
split-divider-color = #313244

# Palette
palette = 0=#45475a
palette = 1=#f38ba8
palette = 2=#a6e3a1
palette = 3=#f9e2af
palette = 4=#89b4fa
palette = 5=#f5c2e7
palette = 6=#94e2d5
palette = 7=#a6adc8
palette = 8=#585b70
palette = 9=#f38ba8
palette = 10=#a6e3a1
palette = 11=#f9e2af
